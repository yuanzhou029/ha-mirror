          "country_code": "Zone key"
        }
      },
      "reauth_confirm": {
        "data": {
          "api_key": "[%key:common::config_flow::data::api_key%]"
        }
      },
      "user": {
        "data": {
          "api_key": "[%key:common::config_flow::data::api_key%]",
          "location": "[%key:common::config_flow::data::location%]"
        },
        "description": "Visit the [Electricity Maps app]({register_link}) to request an API key."
      }
    }
